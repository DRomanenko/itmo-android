<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/text_counter</item>
        <item name="android:text">@string/_0</item>
    </style>

    <style name="bn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/open_next</item>
    </style>
</resources>